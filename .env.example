# 应用配置
NODE_ENV=development
PORT=3002

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=workflow
DB_USER=root
DB_PASSWORD=123456
DB_SYNC=true

# JWT配置
JWT_SECRET=oa_system_jwt_secret_key_2024
JWT_REFRESH_SECRET=oa_system_jwt_refresh_secret_key_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 工作时间配置
WORK_START_TIME=09:00:00
WORK_END_TIME=18:00:00

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# 日志配置
LOG_LEVEL=debug
LOG_DIR=./logs

# 安全配置
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX=100  # 每IP最大请求数

# 服务器超时设置
SERVER_TIMEOUT=120000  # 2分钟

# 可选的外部服务配置
# 阿里云OSS配置（如需使用，取消注释）
# OSS_REGION=oss-cn-hangzhou
# OSS_ACCESS_KEY_ID=your_access_key_id
# OSS_ACCESS_KEY_SECRET=your_access_key_secret
# OSS_BUCKET=your-bucket-name

# 邮件服务配置（如需使用，取消注释）
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USER=user@example.com
# MAIL_PASS=password
# MAIL_FROM=noreply@example.com